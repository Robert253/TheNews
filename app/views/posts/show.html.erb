<div class="container">
<div class="row">
  <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-xs-center">
      <h1><%= @post.title %></h1>
      <h3 class="text-center"><%= @post.display_day_published %></h3>

        <%= @post.body %>
        <%= @post.conclusion %>
      </div>
      <%= link_to 'Back', posts_path %>
</div>
<div>
  <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-sm btn-warning' %>
  <%= link_to 'Delete', post_path(@post), method: :delete,data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger'  %>
</div>
</div>
